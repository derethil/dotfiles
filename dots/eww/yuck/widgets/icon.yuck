
(defwidget icon [icon ?class ?visible]
  (box
    :class "${class} icon-widget"
    :orientation "h"
    :halign "center"
    :width "100%"
    :space-evenly false
    :visible {visible ?: true} ; because the argument is optional
    (label
      :class "icon-module__icon"
      :text "${icon}"
    )
    (children)
  )
)